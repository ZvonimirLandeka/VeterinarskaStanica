@model IEnumerable<VeterinarskaStanica.Model.Zivotinja>

@{
    ViewBag.Title = "Moje životinje";
}

<h2>Moje životinje</h2>

<p>
    @Html.ActionLink("Dodaj novu životinju", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.VrstaZivotinje.Naziv)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Spol)
        </th>
 
        <th>
            @Html.DisplayNameFor(model => model.Boja)
        </th>
 
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr onclick="location.href = '@(Url.Action("Details", "Zivotinja", new { id = item.Id }))'" class="zivotinjeCursor">
        <td>
            @Html.DisplayFor(modelItem => item.Ime)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.VrstaZivotinje.Naziv)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Spol)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Boja)
        </td>
        
        
        
        <td>
            @Html.ActionLink("Detalji", "Details", new { id=item.Id }) |
            @Html.ActionLink("Zatraži termin za životinju", "Create", "Termin", new { id = item.Id }, htmlAttributes: new { id = item.Id })
        </td>
    </tr>
}

</table>
